import tkinter as tk
from tkinter import filedialog
from PIL import Image, ImageTk

class UploadImageGame:
    def __init__(self, master):
        self.master = master
        master.title("上傳圖片的遊戲")

        self.label = tk.Label(master, text="請上傳一張圖片")
        self.label.pack()

        self.upload_button = tk.Button(master, text="上傳圖片", command=self.upload_image)
        self.upload_button.pack()

        self.image_label = tk.Label(master)
        self.image_label.pack()

    def upload_image(self):
        file_path = filedialog.askopenfilename()
        if file_path:
            img = Image.open(file_path)

            # 圖片放大處理
            img = img.resize((400, 400), Image.ANTIALIAS)

            self.img_tk = ImageTk.PhotoImage(img)
            self.image_label.config(image=self.img_tk)
            self.label.config(text="圖片上傳成功！")

if __name__ == "__main__":
    root = tk.Tk()
    game = UploadImageGame(root)
    root.mainloop()
